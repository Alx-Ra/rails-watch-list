<h1><%= @list.name%></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card position-relative">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
        <div class="card-body">
            <%= link_to "X", bookmark_path(bookmark),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "position-absolute top-0 end-0 m-2 text-white text-decoration-none"%>
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
            <p class="card-text"><%= bookmark.movie.overview%></p>
       </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to lists_path, class: "btn btn-primary", style: "color: white; display: inline-block; text-decoration: none;" do %>
  Return to lists
<% end %>

<%= link_to new_list_bookmark_path(@list), class: "btn btn-primary", style: "color: white; display: inline-block; text-decoration: none;" do %>
  Add a new movie
<% end %>
