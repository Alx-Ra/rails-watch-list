<h1><%= @list.name%></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
