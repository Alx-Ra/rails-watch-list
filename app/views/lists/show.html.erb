<h1><%= @list.name%></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <p class="card-text"><%= bookmark.movie.overview%></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
      </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Return to List', lists_path%>
<%= link_to 'Create a bookmark', new_list_bookmark_path(@list)%>